% vim: ts=4 sw=4 et ft=erlang

{lib_dirs, ["deps"]}.

{deps, [
    {lager, "2.0.1",
        {git, "https://github.com/basho/lager.git", {tag, "2.0.1"}}},
    {lager_syslog, "2.0.1",
        {git, "git@github.com:basho/lager_syslog.git", {tag, "2.0.1"}}},
    {sync, ".*",
        {git, "https://github.com/rustyio/sync.git", {branch, "master"}}},
    {node_mon, ".*",
        {git, "git@github.com:EchoTeam/node_mon.git", {branch, "master"}}}
]}.

{sub_dirs, ["rel"]}.


{eunit_compile_opts, [export_all]}.
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.

%{cover_enabled, true}.
%{cover_export_enabled, true}.
%{cover_export_file, "all.coverdata"}.

% Rebar plugins
{plugin_dir, "rebar_plugins"}.

{plugins, [
    rebar_lock_deps_plugin
]}.

{post_hooks, [
    {clean, "rm -rf rel/{{name}}*"},
    {clean, "rm -rf rel/reltool.config"}
]}.
